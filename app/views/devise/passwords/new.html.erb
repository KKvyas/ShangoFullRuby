<% provide(:title, 'Reset password') %>

<h2 class="is-center">Reset your password</h2>

<div class="pure-g-r">
	<div class="pure-u-1-3">
		&nbsp;
	</div>

	<div class="pure-u-1-3 is-center">
		<%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "pure-form" } do |f| %>
			<%= devise_error_messages! %>
			<fieldset class="pure-group">
				<%= f.email_field :email, autofocus: true, :placeholder => "your email", :class => "pure-input-1-2"  %>
			</fieldset>


			<%= f.submit "Send me reset password instructions", :class => "pure-button pure-input-1-2 pure-button-primary" %>
		<% end %>
	</div>

	<div class="pure-u-1-3">
		&nbsp;
	</div>
</div>

<%= render "devise/shared/links" %>