<h1>Listing guides</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Intro</th>
      <th>Bio</th>
      <th>Approved</th>
      <th>Banned</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @guides.each do |guide| %>
      <tr>
        <td><%= guide.user_id %></td>
        <td><%= guide.intro %></td>
        <td><%= guide.bio %></td>
        <td><%= guide.approved %></td>
        <td><%= guide.banned %></td>
        <td><%= link_to 'Show', guide %></td>
        <td><%= link_to 'Edit', edit_guide_path(guide) %></td>
        <td><%= link_to 'Destroy', guide, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

