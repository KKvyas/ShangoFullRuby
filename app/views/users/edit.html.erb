<% provide(:title, 'Edit profile') %>

<%= form_for @user, html: { :class => "pure-form pure-form-stacked" } do |f| %>
	<% if @user.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

			<ul>
			<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<%= render 'profile_msg' %>

	<fieldset class="profile">
        <legend>Personal Contact Information</legend>

        <div class="pure-g-r">
            <div class="pure-u-1-4 pure-u-med-1-3">
				<%= f.label :first, 'First *' %>
				<%= f.text_field :first %>
            </div>

            <div class="pure-u-1-4 pure-u-med-1-3">
				<%= f.label :last, 'Last *' %>
				<%= f.text_field :last %>
            </div>

            <div class="pure-u-1-4 pure-u-med-1-3">
				<%= f.label :email, 'Email *' %>
				<%= f.text_field :email %>
            </div>

            <div class="pure-u-1-4 pure-u-med-1-3">
				<%= f.label :phone, 'Phone *' %>
				<%= f.text_field :phone %>
            </div>

            <div class="pure-u-1-4 pure-u-med-1-3">
				<%= f.label :street_address %>
				<%= f.text_field :street_address %>
            </div>

            <div class="pure-u-1-4 pure-u-med-1-3">
				<%= f.label :city %>
				<%= f.text_field :city %>
            </div>

            <div class="pure-u-1-4 pure-u-med-1-3">
				<%= f.label :state %>
				<%= f.text_field :state %>
            </div>

            <div class="pure-u-1-4 pure-u-med-1-3">
				<%= f.label :gender %>
				<%= f.text_field :gender %>
            </div>
        </div>

    </fieldset>


	<fieldset class="profile">
        <legend>Emergency Contact Information</legend>

        <div class="pure-g-r">
            <div class="pure-u-1-4 pure-u-med-1-3">
                <%= f.label :emergency_first, 'First *' %>
				<%= f.text_field :emergency_first %>
            </div>

            <div class="pure-u-1-4 pure-u-med-1-3">
                <%= f.label :emergency_last, 'Last *' %>
				<%= f.text_field :emergency_last %>
            </div>

            <div class="pure-u-1-4 pure-u-med-1-3">
                <%= f.label :emergency_relationship, 'Relationship *' %>
				<%= f.text_field :emergency_relationship %>
            </div>

            <div class="pure-u-1-4 pure-u-med-1-3">
                <%= f.label :emergency_phone, 'Phone *' %>
				<%= f.text_field :emergency_phone %>
            </div>

            <div class="pure-u-1-4 pure-u-med-1-3">
				<%= f.label :emergency_email, 'Email *' %>
				<%= f.text_field :emergency_email %>
            </div>
            <div class="pure-u-1-4 pure-u-med-1-3">
				<%= f.label :emergency_notes, 'Additional notes' %>
				<%= f.text_area :emergency_notes %>
            </div>
        </div>

    </fieldset>

        <div class="pure-g-r">
            <div class="pure-u-1-3">
            	&nbsp;
            </div>

			<div class="pure-u-1-3">
				<%= f.submit 'Update profile', :class => "pure-button"%>
			</div>

            <div class="pure-u-1-3">
            	&nbsp;
            </div>
        </div>


<% end %>


